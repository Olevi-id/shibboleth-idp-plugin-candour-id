<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>assembly-zip</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../candour-id-api/target</directory>
            <outputDirectory>webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>candour-id-api-*.jar</include>
            </includes>
            <excludes>
                <exclude>*test*.jar</exclude>
                <exclude>*javadoc.jar</exclude>
                <exclude>*sources.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../candour-id-impl/target</directory>
            <outputDirectory>webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>candour-id-impl-*.jar</include>
            </includes>
            <excludes>
                <exclude>*test*.jar</exclude>
                <exclude>*javadoc.jar</exclude>
                <exclude>*sources.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/webapp</directory>
            <outputDirectory>webapp</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../candour-id-impl/src/main/resources/fi/csc/shibboleth/plugin/candour-id</directory>
            <outputDirectory>bootstrap</outputDirectory>
            <includes>
                <include>plugin.properties</include>
            </includes>
            <lineEnding>windows</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${dist.assemblyDirectory}</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
    </fileSets>
</assembly>